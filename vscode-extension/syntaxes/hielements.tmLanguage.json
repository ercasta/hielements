{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Hielements",
  "scopeName": "source.hielements",
  "patterns": [
    { "include": "#comments" },
    { "include": "#imports" },
    { "include": "#elements" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.hielements",
          "begin": "###",
          "end": "###"
        },
        {
          "name": "comment.line.documentation.hielements",
          "match": "##.*$"
        },
        {
          "name": "comment.line.hielements",
          "match": "#.*$"
        }
      ]
    },
    "imports": {
      "patterns": [
        {
          "match": "\\b(import)\\s+([a-zA-Z_][a-zA-Z0-9_]*)(?:\\s+(as)\\s+([a-zA-Z_][a-zA-Z0-9_]*))?",
          "captures": {
            "1": { "name": "keyword.control.import.hielements" },
            "2": { "name": "entity.name.namespace.hielements" },
            "3": { "name": "keyword.control.as.hielements" },
            "4": { "name": "entity.name.namespace.alias.hielements" }
          }
        },
        {
          "match": "\\b(from)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s+(import)\\s+",
          "captures": {
            "1": { "name": "keyword.control.from.hielements" },
            "2": { "name": "entity.name.namespace.hielements" },
            "3": { "name": "keyword.control.import.hielements" }
          }
        }
      ]
    },
    "elements": {
      "patterns": [
        {
          "match": "\\b(element)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*:",
          "captures": {
            "1": { "name": "keyword.declaration.element.hielements" },
            "2": { "name": "entity.name.type.element.hielements" }
          }
        },
        {
          "match": "\\b(scope)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*=",
          "captures": {
            "1": { "name": "keyword.declaration.scope.hielements" },
            "2": { "name": "variable.other.scope.hielements" }
          }
        },
        {
          "match": "\\b(connection_point)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*=",
          "captures": {
            "1": { "name": "keyword.declaration.connection-point.hielements" },
            "2": { "name": "variable.other.connection-point.hielements" }
          }
        },
        {
          "match": "\\b(check)\\b",
          "name": "keyword.declaration.check.hielements"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.hielements",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.hielements",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.hielements",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.hielements",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.hielements",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.hielements",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.hielements",
          "match": "\\b(import|from|as)\\b"
        },
        {
          "name": "keyword.declaration.hielements",
          "match": "\\b(element|scope|connection_point|check)\\b"
        },
        {
          "name": "constant.language.boolean.hielements",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.hielements",
          "match": "="
        },
        {
          "name": "punctuation.separator.hielements",
          "match": "[,:]"
        },
        {
          "name": "punctuation.accessor.hielements",
          "match": "\\."
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.hielements",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\.([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.namespace.hielements" },
            "2": { "name": "entity.name.function.hielements" }
          }
        }
      ]
    }
  }
}
