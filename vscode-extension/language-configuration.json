{
  "comments": {
    "lineComment": "#",
    "blockComment": ["###", "###"]
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(element|pattern|template|scope|connection_point|ref|check).*[:{]\\s*(#.*)?$",
    "decreaseIndentPattern": "^\\s*}\\s*$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*element\\s+\\w+\\s*:",
      "end": "^(?=\\s*element\\s+\\w+\\s*:)|^(?=\\S)"
    }
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
